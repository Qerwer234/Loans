<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Buttons">

        <item name="android:layout_width">@dimen/button_layout_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/button_layout_marginTop</item>
        <item name="android:background">@color/button_background</item>
        <item name="android:layout_centerHorizontal">true</item>


        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>

    </style>
    <style name="normalText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/padding_normal_TextView</item>
        <item name="android:paddingTop">@dimen/padding_normal_TextView</item>
        <item name="android:textSize">@dimen/normalText</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:padding">@dimen/padding_normal_TextView</item>
    </style>

    <style name="bigText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/app_margin</item>
        <item name="android:textSize">@dimen/bigText</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="smallText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/app_margin</item>
        <item name="android:textSize">@dimen/smallText</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="edit_login">
        <item name="android:padding">8dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColorHint">#80441C8C</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/bg_edit</item>
    </style>

</resources>