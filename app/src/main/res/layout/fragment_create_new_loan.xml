<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:columnCount="2"
    android:padding="@dimen/padding_normal_TextView"
    android:orientation="vertical"
    android:background="@color/button_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="2">
            <TextView
                android:id="@+id/tv_item_desc"
                android:layout_height="40dp"
                android:layout_columnSpan="2"
                style="@style/bigText"
                android:layout_gravity="fill"
                android:gravity="center"
                android:text="Заполните свободные поля" />

            <TextView
                android:id="@+id/tv_new_fn1"
                style="@style/normalText"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:text="Имя" />

            <EditText
                android:id="@+id/tv_new_first_name"
                style="@style/normalText"
                android:layout_columnSpan="1"
                android:layout_columnWeight="5"
                android:hint="Введите Имя"/>

            <TextView
                android:id="@+id/tv_new_last_name1"
                style="@style/normalText"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:text="Фамилия" />

            <EditText
                android:id="@+id/tv_new_last_name"
                android:layout_columnWeight="1"
                android:layout_columnSpan="1"
                android:hint="Введите Фамилию"
                style="@style/normalText" />
            <TextView
                android:id="@+id/tv_new_phone1"
                android:layout_columnWeight="1"
                style="@style/normalText"
                android:layout_columnSpan="1"
                android:text="Телефон"/>

            <EditText
                android:id="@+id/tv_new_phone"
                android:layout_columnWeight="1"
                style="@style/normalText"
                android:layout_columnSpan="1"
                android:hint="Укажите телефон"/>
            <TextView
                android:id="@+id/tv_new_amount1"
                android:layout_columnWeight="1"
                style="@style/normalText"
                android:layout_columnSpan="1"
                android:text="Сумма"/>

            <EditText
                android:id="@+id/tv_new_amount"
                android:layout_columnWeight="1"
                style="@style/normalText"
                android:layout_columnSpan="1" />
            <TextView
                android:id="@+id/tv_new_percent1"
                android:layout_columnWeight="1"
                style="@style/normalText"
                android:layout_columnSpan="1"
                android:text="Процент, годовых"/>

            <EditText
                android:id="@+id/tv_new_percent"
                android:layout_columnWeight="1"
                style="@style/normalText"
                android:layout_columnSpan="1"/>
            <TextView
                android:id="@+id/tv_new_period1"
                android:layout_columnWeight="1"
                style="@style/normalText"
                android:layout_columnSpan="1"
                android:text="Период, месяцев" />

            <EditText
                android:id="@+id/tv_new_period"
                style="@style/normalText"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1" />

        </GridLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:id="@+id/btn_update"
            android:layout_weight="1"
            android:layout_width="180dp"
            android:layout_margin="@dimen/app_margin"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bg_button"
            android:text="Обновить"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_send"
            android:layout_weight="1"
            android:layout_width="180dp"
            android:layout_margin="@dimen/app_margin"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button"
            android:text="Отправить"
            android:textColor="#FFFFFF" />
    </LinearLayout>



</LinearLayout>
