<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/app_margin"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/id_amount"

        style="@style/normalText"

        android:layout_height="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="сумма"
/>

    <TextView
        android:id="@+id/id_percent"
        style="@style/normalText"

        android:layout_height="32dp"
        android:layout_marginStart="60dp"
        app:layout_constraintStart_toStartOf="@id/id_amount"
        app:layout_constraintTop_toTopOf="@id/id_amount"
        tools:text="% \nгодовых"
/>

    <TextView
        android:id="@+id/id_period"
        style="@style/normalText"

        android:layout_height="31dp"
        android:layout_marginStart="120dp"
        app:layout_constraintStart_toStartOf="@id/id_amount"
        app:layout_constraintTop_toTopOf="@id/id_amount"
        tools:text="срок, месяцев"
/>

    <TextView
        android:id="@+id/id_state"
        style="@style/normalText"


        android:layout_height="32dp"
        android:layout_marginStart="50dp"
        app:layout_constraintStart_toStartOf="@id/id_period"
        app:layout_constraintTop_toTopOf="@id/id_period"
        tools:text="статус"
/>

</androidx.constraintlayout.widget.ConstraintLayout>